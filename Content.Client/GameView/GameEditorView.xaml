    <PanelContainer Margin="8">
    <BoxContainer Orientation="Vertical" Name="FUCK" VerticalExpand="True" Align="Center">
        <BoxContainer Orientation="Vertical" Name="BaseBox" Align="Center">
            <BoxContainer Orientation="Horizontal" Align="Center" HorizontalExpand="True">
                <PanelContainer StyleClasses="SimulationBackground">
                <rendering:SimulationControl Name="SimControl" Margin="8"/>
                </PanelContainer>
            </BoxContainer>
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                <Button Name="EraseMode" Text="Erase"/>
                <BoxContainer Name="ElementPlaceButtons" HorizontalExpand="True" VerticalExpand="True" Orientation="Horizontal"/>
            </BoxContainer>
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                <Button Name="Pause" Text="Pause" ToggleMode="True"/>
                <Button Name="Clear" Text="Clear"/>
                <Button Name="Save" Text="Save"/>
                <Button Name="Load" Text="Load"/>
                <Button Name="Discord" Text="Discord" HorizontalAlignment="Right" HorizontalExpand="True"/>
            </BoxContainer>
            <BoxContainer Orientation="Vertical" VerticalExpand="True" Name="InfoBox">
                <Label Text="0ms" Name="SimTickTime" StyleClasses="SimulationStatus"/>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Name="ParticleAnalyzer" MinHeight="64" StyleClasses="SimulationStatus"></BoxContainer>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
    </PanelContainer>
